/var/log/ceilometer/ceilometer-alarm-evaluator.log {
    daily
    missingok
    compress
    delaycompress
    notifempty
    postrotate
        if dpkg-vendor --derives-from ubuntu ; then
            service ceilometer-alarm-evaluator restart >/dev/null 2>&1 || true
        else
            invoke-rc.d ceilometer-alarm-evaluator restart >/dev/null 2>&1 || true
        fi
    endscript
}
