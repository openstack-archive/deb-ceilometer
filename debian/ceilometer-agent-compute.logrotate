/var/log/ceilometer/ceilometer-agent-compute.log {
    daily
    missingok
    compress
    delaycompress
    notifempty
    postrotate
        if dpkg-vendor --derives-from ubuntu ; then
            service ceilometer-agent-compute restart >/dev/null 2>&1 || true
        else
            invoke-rc.d ceilometer-agent-compute restart >/dev/null 2>&1 || true
        fi
    endscript
}
