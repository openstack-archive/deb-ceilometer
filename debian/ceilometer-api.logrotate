/var/log/ceilometer/ceilometer-api.log {
    daily
    missingok
    compress
    delaycompress
    notifempty
    postrotate
        if dpkg-vendor --derives-from ubuntu ; then \
            service ceilometer-api restart >/dev/null 2>&1 || true ; \
        else \
            invoke-rc.d ceilometer-api restart >/dev/null 2>&1 || true ; \
        fi
    endscript
}
